<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layout_fragment_login"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iv_welcome_logo_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_app_main"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/ll_welcome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:animateLayoutChanges="true">

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="TU E-Mail"
            android:maxLength="32"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_email" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit_text"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:hint="Password"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/ic_edit_text_password" />

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:text="Login"
            android:padding="10dp"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/background_button" />
    </LinearLayout>

    <TextView
        android:text="Must be a Temple University Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_welcome_login"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
</RelativeLayout>